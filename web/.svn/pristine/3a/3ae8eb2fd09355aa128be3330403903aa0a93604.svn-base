@import "../sassmixins/_mixins.scss";
@import "../cdn/myreset.min.css";
body{
  background:#eaeaea;
}
.blue{
  color:#3cd3db;
}
.white{
  background:#fff;
  padding-left: px2rem-s(30px);
  padding-right: px2rem-s(30px);
}
.f32{
  @include font-dpr(16px);
  @include font-normal;
  color:#333;
}
.f28{
  @include font-dpr(14px);
  @include font-normal;
  color:#999;
}
.f24{
  @include font-dpr(12px);
  @include font-normal;
  color:#999;
}
.float{
  display: -webkit-box;
  -webkit-box-align: start;
  -webkit-box-pack: justify;
}
.title{
  height:px2rem-s(90px);
  line-height: px2rem-s(90px);
  border-bottom: 1px solid #eaeaea;
}

.replay{
  padding-top:px2rem-s(30px);
  .user_img{
    width:px2rem-s(66px);
    height:px2rem-s(66px);
    border-radius: px2rem-s(66px);
    overflow: hidden;
    img{
      width:100%;
      height:auto;
    }
  }
  .replay_content{
    -webkit-box-flex: 1;
    padding-left: px2rem-s(10px);
    .top{
      padding-bottom: px2rem-s(10px);
      -webkit-box-align: center;
      .user_name{
        display: -webkit-box;
        -webkit-box-align: center;
        span{
          display: inline-block;
          &.name{
            padding-right:px2rem-s(10px);
            padding-top:px2rem-s(8px);
          }
          &.floor_first{
            width:px2rem-s(60px);
            background:#3cd3db;
            color:#fff;
            border-radius: 3px;
            padding-top:px2rem-s(5px);
            padding-bottom: px2rem-s(5px);
            text-align: center;
            @include font-dpr(12px);
            @include font-normal;
          }
        }

      }
    }
    .middle{
      padding-bottom: px2rem-s(30px);
    }
    .bottom{
      p{
        line-height: 1.8em;
        word-break: break-all;
        padding-bottom: px2rem-s(20px);
        color:#333;
      }
      .img{
        position: relative;
        padding-bottom: px2rem-s(15px);
        ul{
          display: -webkit-box;
          -webkit-box-align: center;
          -webkit-box-pack: start;
          overflow: hidden;
          li{
            padding-right:px2rem-s(20px);
            border-radius: px2rem-s(10px);
            overflow: hidden;
            width:px2rem-s(130px);
            height:px2rem-s(130px);
            background:red;
            img{
              width:100%;
              height:100%;
            }

          }
        }
        .num{
          position: absolute;
          bottom: 0;
          right:0;
          background:rgba(0,0,0,0.5);
          color:#fff;
          width:px2rem-s(75px);
          height:px2rem-s(30px);
          @include font-dpr(10px);
          @include font-normal();
          line-height: px2rem-s(30px);
          text-align: center;
          border-radius: px2rem-s(7px);
        }
      }
    }
    .talk_box{
      position: relative;
      padding:px2rem-s(20px);
      border:1px solid #ddd;
      background:#f3f3f3;
      border-radius: px2rem-s(10px);
      .arrow{
        position: absolute;
        top:px2rem-s(-15px);
        left:px2rem-s(44px);
        border-top:1px solid #ddd;
        border-left:1px solid #ddd;
        background:#f3f3f3;
        transform:rotate(45deg);
        -webkit-transform:rotate(45deg);
        display: block;
        width:px2rem-s(20px);
        height:px2rem-s(20px);
      }
    }
  }
}
.from{
  height:px2rem-s(69px);
  line-height: px2rem-s(69px);
  border-bottom: 1px solid #eaeaea;
}
.topic{
  background:#fff;
  padding:px2rem-s(50px) 0 0;
  margin-bottom: px2rem-s(12px);
  .topic_content{
    border-bottom: 1px solid #eaeaea;
    padding-bottom: px2rem-s(50px);
    .topic_title{
      @include font-dpr(24px);
      @include font-normal;
      color:#333;
      line-height: 1.5em;
    }
    .topic_time{
      padding:px2rem-s(25px) 0 px2rem-s(25px);
    }
    .topic_detail{
      line-height: 1.8em;
      padding-bottom: px2rem-s(70px);
      .img{
        width:100%;
        height:auto;
        padding-bottom: px2rem-s(10px);
        img{
          width:100%;
          height:auto;
        }
      }
    }
    .topic_vote{
      .topic_voteNum{
        padding-bottom: px2rem-s(40px);
        -webkit-box-align: center;
        .vote_num{
          padding:px2rem-s(10px) px2rem-s(50px);
          background: url("../../image/topic_details/community_post_vote.png") no-repeat left center;
          background-size: px2rem-s(32px) px2rem-s(32px);
          span{
            color:#666;
          }
        }
      }
      .topic_choose{
        padding-bottom: px2rem-s(50px);
        li{
          padding-bottom: px2rem-s(50px);
          .choose_top{
            .name{
              height:px2rem-s(60px);
              line-height: px2rem-s(60px);
            }
            .vote{
              height:px2rem-s(60px);
              background:#f1f1f1;
              padding:0 px2rem-s(25px);
              border-radius: px2rem-s(13px);
              display: -webkit-box;
              -webkit-box-align: center;
              color:#3cd3db;
              img{
                width:px2rem-s(20px);
                height:px2rem-s(14px);
              }
              span{
                padding-left:px2rem-s(10px);
              }
            }
            .double_vote{
              width:px2rem-s(40px);
              height:px2rem-s(40px);
              background:url("../../image/topic_details/doctor_agreement_check_sel.png") no-repeat center;
              background-size: px2rem-s(30px);
            }
          }
          .choose_bottom{
            margin-top:px2rem-s(-9px) ;
            height:px2rem-s(13px);
            width:100%;
            background:#f1f1f1;
            border-radius: px2rem-s(13px) 0 px2rem-s(13px) px2rem-s(13px);
          }
          &:last-child{
            padding-bottom: 0;
          }
        }
      }
      .vote_btn{
        width: 100%;
        height:px2rem-s(68px);
        background:#80fbfc;
        border:1px solid #8f8484;
        border-radius: px2rem-s(68px);
        text-align: center;
        line-height: px2rem-s(68px);
        @include font-dpr(15px);
        @include font-normal;
        color:#666;
      }
    }
    .topic_label{
      padding-bottom: px2rem-s(40px);
      line-height: 1.5em;
    }
    .topic_about{
      line-height: 1.5em;
    }
  }
  .topic_author{
    padding:px2rem-s(30px);
    display: -webkit-box;
    -webkit-box-align: center;
    .author_name{
      color:#3cd3db;
    }
    .author_img{
      width:px2rem-s(88px);
      height:px2rem-s(88px);
      border-radius: px2rem-s(100px);
      overflow: hidden;
      img{
        width:100%;
        height:auto;
      }
    }
    .author_detail{
      padding-left:px2rem-s(10px);
      .author_name{
        padding-bottom: px2rem-s(20px);
      }
      .author_time{
        color:#999;
      }
    }

  }
}
.best_answer{
  margin-bottom: px2rem-s(12px);
  background:#f5ffff;
  padding-bottom: px2rem-s(30px);
  .title{
    padding-left: px2rem-s(30px);
    padding-right: px2rem-s(30px);
    background: url("../../image/topic_details/post_best_icon.png") no-repeat px2rem-s(165px) center;
    background-size: px2rem-s(24px) px2rem-s(38px);
  }
  .replay{
    padding-left: px2rem-s(30px);
    padding-right: px2rem-s(30px);
  }
}
.arrow_box{
  position:relative;
  .bubble{
    width:100%;
    background:#f3f3f3;
    border:1px solid #ddd;
    color:#999;
    padding:px2rem-s(20px);
    box-sizing: border-box;
    border-radius: px2rem-s(6px);
    margin-top:px2rem-s(10px);
    line-height: 1.3em;
    z-index: 999;
    color:#666;
  }
  .arrow{
    position: absolute;
    border-top:1px solid #ddd;
    border-left:1px solid #ddd;
    background: #f3f3f3;
    transform:rotate(45deg);
    -webkit-transform: rotate(45deg);
    top:px2rem-s(-10px);
    left:px2rem-s(15px);
    width:px2rem-s(20px);
    height:px2rem-s(20px);
  }
}

.all_answer{
  li{
    .bottom{
      border-bottom: 1px solid #eaeaea;
      padding-bottom: px2rem-s(30px);
    }
    &:last-child{
      .bottom{
        border-bottom: none;
      }
    }
  }
}
.more_btn{
  text-align: center;
  background: #fff;
  @include font-dpr(12px);
  @include font-normal;
  line-height: 3em;
  color:#3cd3db;
}
.footer_fixed{
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height:px2rem(124px);
  .close{
    width:px2rem-s(46px);
    height:px2rem-s(46px);
    position: absolute;
    top:0;
    left:0;
    background:url("../../image/delete.png") no-repeat center;
    background-size: contain;
  }
  .down{
    background:url("../../image/down.png") no-repeat center;
    background-size: 100% auto;
    width:100%;
    height:px2rem(124px);
  }
}
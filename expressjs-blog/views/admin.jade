extends layout
block cssjs
    script(src="/js/admin.js")
block content
    div.row.admin-title
        div.col-sm-4
            a.btn.btn-primary.btn-block(href='/new') 写博客
        div.col-sm-4
            a.btn.btn-primary.btn-block(href='/collect/edit') 编辑文集
    div.row
        div.admin-title
            h3 最近回复
        div.admin-box
            ul.admin-ul
                each val in reply
                    li.admin-li
                        p #{val.nick} 在 《#{val.title}》 对 #{val.replyWhoNick} 说:
                        span!= val.content
                        p
                            span(style="margin-right:10px;")
                                a(href='/article/#{val.customURL}?replyID=#{val.replyID}') 查看
                            a(href='javascript:void(0)' class="del-reply" replyID="#{val.replyID}") 删除
        div.admin-title
            h3 文章列表
        div.admin-box
            ul.admin-ul
                each val in doc
                    li.admin-li
                        p
                            span
                                a(href='/article/#{val.customURL}')= val.title
                            span.admin-edit
                                a(href='/edit?articleID=#{val.articleID}') 编辑

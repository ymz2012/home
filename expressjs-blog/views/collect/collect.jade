extends ../layout

block content
    div(style="margin:0").row
        div(style="padding:0").col-sm-8
            each val in doc
                div.blog-container
                    div.blog-title
                        a(href='/collect/cid/#{val.collect}')= val.collect
                    div.blog-wrap
                        each v,index in val.article
                            div.collect-article-title
                                =(index + 1) +'. ' 
                                a(href='/article/#{v.customURL}')= v.title
        div(style="padding-right:0").col-sm-4.hidden-xs
            include ../common/sidebar.jade
            include ../common/friendLinks.jade
